<%= form_with model: @movie do |form| %>
    <%= form.label :name, "Film name" %>
    <%= form.text_field :name %>
    <%= form.label :director, "Director name" %>
    <%= form.text_field :director %>
    <%= form.label :year, "Release date" %>
    <%= form.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1) %>
    <%= form.label :duration, "Duration (min)" %>
    <%= form.text_field :duration, data: { numeric: true } %>
    <%= form.label :description, "Description" %>
    <%= form.text_field :description %>
    <%= form.submit "New film" %>
<% end %>